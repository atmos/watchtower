only :runtime do
  gem 'sinatra'
  gem 'mongo'
  gem 'mongo_ext'
  gem 'mustache'
  gem 'nokogiri'
  gem 'rack-bug'
end

only :development do
  gem 'rake'
  gem 'shotgun'
end

only :test do
  gem 'webrat'
  gem 'rspec',     :require_as => 'spec'
  gem 'fakeweb'
  gem 'diff-lcs'
  gem 'rack-test', :require_as => 'rack/test'
  gem 'ruby-debug'
end
